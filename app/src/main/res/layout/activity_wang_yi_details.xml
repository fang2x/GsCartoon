<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/abl_wang_yi_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.gs.gscartoon.behavior.AppBarLayoutOverScrollViewBehavior"
        app:elevation="0dp">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentScrim="@drawable/bg_action_bar"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_wangyi_default_image"
                android:foreground="@drawable/bg_gradient_black"
                android:tag="@string/over_scroll_image"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.9" />
            <FrameLayout
                android:id="@+id/fl_toolbar_label"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbar_label_height"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:tag="@string/over_scroll_label"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.3">
                <TextView
                    android:id="@+id/tv_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="label"
                    android:layout_gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:background="@drawable/bg_ellipse_border_white"/>
                <TextView
                    android:id="@+id/tv_view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="viewCount"
                    android:layout_gravity="end|center_vertical"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp" />
            </FrameLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_wang_yi_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <com.gs.gscartoon.widget.view.MarqueTextView
        android:id="@+id/mtv_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="title"
        android:textSize="18sp"
        android:layout_marginStart="15dp"
        android:textColor="@color/WHITE"
        android:layout_gravity="bottom"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:focusableInTouchMode="true"
        android:focusable="true"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/tl_wang_yi_details_tabs"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:tabTextAppearance="@style/ZhiJiaTabLayoutTextAppearance"
        app:tabBackground="@color/WHITE"
        app:tabSelectedTextColor="@color/ToolbarDark"
        app:tabIndicatorColor="@color/ToolbarLight"
        app:tabTextColor="@color/tab_text_color"
        app:tabIndicatorHeight="0dp"
        app:tabGravity="fill" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_wang_yi_details_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@color/WHITE"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
</android.support.design.widget.CoordinatorLayout>
