<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/iv_cover"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:transitionName="@string/transition_name_zhi_jia_cover"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <com.gs.gscartoon.widget.view.MarqueTextView
        android:id="@+id/mtv_title"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:text="Title"
        android:textStyle="bold"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_toRightOf="@id/iv_cover"
        android:textColor="@color/BLACK"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/iv_cover"
        android:layout_alignBottom="@id/iv_cover"
        android:text="Time"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/DIMGRAY"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/tv_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:text="See"
        android:layout_toRightOf="@id/iv_cover"
        android:layout_above="@id/tv_time"
        android:textColor="@color/DIMGRAY"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_cover"
        android:background="@color/dividing_line_gray" />

    <TextView
        android:id="@+id/tv_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="续看"
        android:textSize="13sp"
        android:background="@drawable/selector_ellipse_border_red_blue_42"
        android:textColor="@drawable/selector_text_red_blue"
        android:maxLines="1"
        android:ellipsize="end"/>
</RelativeLayout>