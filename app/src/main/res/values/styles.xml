<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="android:windowEnterTransition">@transition/activity_slide_right</item>-->
        <!--<item name="android:windowExitTransition">@transition/activity_slide_left</item>-->

        <!-- 是否允许过渡效果之间的重叠 -->
        <!--<item name="android:windowAllowEnterTransitionOverlap">false</item>-->
        <!--<item name="android:windowAllowReturnTransitionOverlap">false</item>-->
    </style>

    <!-- 解决启动时空白页 -->
    <style name="SplashAppTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/ToolbarDark</item>
    </style>

    <!-- windowBackground影响揭露动画Circular Reveal以及Transition 的效果 -->
    <style name="HomeTheme" parent="AppTheme">
        <!--<item name="android:windowBackground">@color/ToolbarDark</item>-->
    </style>

    <!-- TabLayout文字大小 -->
    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">12sp</item>
    </style>
    <!-- TabLayout文字大小 -->
    <style name="ZhiJiaTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
